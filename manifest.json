{
  "manifest_version": 2,
  "name": "otomooto",
  "version": "1.0",
  "permissions": [
    "activeTab",
    "<all_urls>"
],
  "icons": { "16": "img/icon16.png",
           "48": "img/icon48.png",
          "128": "img/icon128.png" },
  "browser_action": {
	"default_popup": "popup.html",
    "default_title": "OTOMOTO Калькулятор Розмитнення"
  },
  "content_scripts": [{
    "matches": [
      "<all_urls>"
    ],
    "js": ["content.js"]
  }]
}